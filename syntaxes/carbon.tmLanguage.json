{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Carbon",
    "patterns": [
        {
            "include": "#control"
        },
        {
            "include": "#other"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "experimental"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#longStrings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#longComments"
        },
        {
            "include": "#constants"
        }
    ],
    "repository": {
        "control": {
            "name": "keyword.carbon",
            "patterns": [
                {
                    "match": "\\b(if|else|then|for|while|in|as|break|return|case|match|constraint)\\b"
                }
            ]
        },
        "other": {
            "name": "other.carbon",
            "patterns": [
                {
                    "match": "\\b(import|package|api|library|alias|where|external|returned|and|addr)\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "storage.type.fn.carbon",
                    "match": "\\b(fn)\\b"
                },
                {
                    "name": "storage.type.impl.carbon",
                    "match": "\\b(impl)\\b"
                },
                {
                    "name": "storage.type.class.carbon",
                    "match": "\\b(class)\\b"
                },
                {
                    "name": "storage.type.interface.carbon",
                    "match": "\\b(interface)\\b"
                },
                {
                    "name": "storage.type.var.carbon",
                    "match": "\\b(var)\\b"
                },
                {
                    "name": "storage.type.let.carbon",
                    "match": "\\b(let)\\b"
                },
                {
                    "name": "storage.type.const.carbon",
                    "match": "\\b(const)\\b"
                },
                {
                    "name": "storage.type.interface.carbon",
                    "match": "\\b(interface)\\b"
                },
                {
                    "name": "storage.type.choice.carbon",
                    "match": "\\b(choice)\\b"
                }
            ]
        },
        "experimental": {
            "name": "experimental.carbon",
            "patterns": [
                {
                    "match": "\\b(__continuation|__run|__await)\\"
                }
            ]
        },
        "strings": {
            "name": "strings.quoted.double.carbon",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.carbon",
                    "match": "\\\\."
                }
            ]
        },
        "longStrings": {
            "name": "longStrings.quoted.double.carbon",
            "begin": "\"\"\"",
            "end": "\"\"\"",
            "patterns": [
                {
                    "name": "constant.character.escape.carbon",
                    "match": "\\\\."
                }
            ]
        },
        "comments": {
            "name": "comment.block.empty.tpl",
            "patterns": [
                {
                    "begin": "//",
                    "end": "\\n"
                }
            ]
        },
        "longComments": {
            "name": "comment.block.empty.tpl",
            "patterns": [
                {
                    "begin": "/*",
                    "end": "*/"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "match": "\\b(false|null|true)\\b",
                    "name": "constant.bool.carbon"
                },
                {
                    "match": "\\b(0[xX][0-9a-fA-F_]*)\\b",
                    "name": "constant.numeric.carbon"
                },
                {
                    "match": "\\b(([0-9][0-9_]*(\\.[0-9][0-9_]*)?)([eE](\\+|-)?[0-9][0-9_]*)?|[0-9][0-9_]*)[LlFfDd]?\\b",
                    "name": "constant.numeric.carbon"
                },
                {
                    "match": "(\\.[0-9][0-9_]*)([eE](\\+|-)?[0-9][0-9_]*)?[LlFfDd]?\\b",
                    "name": "constant.numeric.carbon"
                }
            ]
        }
    },
    "scopeName": "source.carbon"
}
